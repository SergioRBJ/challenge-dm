{
  "scripts": {
    "test": "cross-env NODE_ENV=test jest",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "cross-env NODE_ENV=dev tsnd --transpile-only --respawn --ignore-watch node_modules src/shared/http/server.ts",
    "typeorm": "tsnd ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "axios": "^0.20.0",
    "celebrate": "^13.0.3",
    "class-transformer": "^0.3.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.6.1",
    "pg": "^8.3.3",
    "ts-jest": "^26.4.1",
    "tsyringe": "^4.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/webpack-env": "^1.15.3",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "ts-node-dev": "^1.0.0-pre.63",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.0.3",
    "webpack-env": "^0.8.0"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,ts,json}",
      "!**/**.module.ts",
      "!**/index.{js,ts}",
      "!**/node_modules/**"
    ]
  }
}
